<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    
    <!-- Configuración por defecto para clasificación por rotación -->
    <record id="default_rotation_classification_config" model="rotation.classification.config">
        <field name="threshold_high">7.0</field>
        <field name="threshold_low">24.0</field>
        <field name="threshold_bone">60.0</field>
        <field name="analysis_period_months">12</field>
        <field name="include_zero_stock" eval="True"/>
        <field name="include_no_consumption" eval="True"/>
        <field name="active" eval="True"/>
    </record>

</odoo>

