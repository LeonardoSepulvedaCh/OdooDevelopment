<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Categoría del módulo -->
        <record id="module_category_zk_manager" model="ir.module.category">
            <field name="name">ZK Manager</field>
            <field name="description">Gestión de dispositivos ZKTECO</field>
            <field name="sequence">10</field>
        </record>

        <!-- Privilegio para el módulo -->
        <record id="res_groups_privilege_zk_manager" model="res.groups.privilege">
            <field name="name">Gestión de Dispositivos ZKTECO</field>
            <field name="category_id" ref="module_category_zk_manager"/>
            <field name="description">Acceso a las funcionalidades de gestión de dispositivos ZKTECO</field>
        </record>

        <!-- Grupo: Usuario (Solo Lectura) -->
        <record id="group_zk_user" model="res.groups">
            <field name="name">Usuario: Solo Lectura</field>
            <field name="privilege_id" ref="res_groups_privilege_zk_manager"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">El usuario puede ver registros de dispositivos, usuarios ZK y asistencias pero no modificarlos.</field>
        </record>

        <!-- Grupo: Administrador -->
        <record id="group_zk_manager" model="res.groups">
            <field name="name">Administrador: Acceso Total</field>
            <field name="privilege_id" ref="res_groups_privilege_zk_manager"/>
            <field name="implied_ids" eval="[(4, ref('group_zk_user'))]"/>
            <field name="comment">El administrador tiene acceso completo para crear, modificar y eliminar registros de dispositivos, usuarios y asistencias.</field>
        </record>

    </data>
</odoo>


