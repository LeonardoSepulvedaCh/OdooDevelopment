<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Heredar vista de formulario de empleado para agregar botón inteligente de asistencias ZK -->
    <record id="view_employee_form_zk_inherit" model="ir.ui.view">
        <field name="name">hr.employee.form.zk.inherit</field>
        <field name="model">hr.employee</field>
        <field name="inherit_id" ref="hr.view_employee_form"/>
        <field name="arch" type="xml">
            <!-- Agregar botón inteligente en el área de botones -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_zk_attendances" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-hand-o-up"
                        invisible="zk_user_count == 0">
                    <field name="zk_attendance_count" widget="statinfo" string="Asistencias ZK"/>
                </button>
                <field name="zk_user_count" invisible="1"/>
            </xpath>
        </field>
    </record>
</odoo>

