<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- ExtensiÃ³n de la vista de formulario de contacto -->
    <record id="view_partner_form_inherit_customer_goals" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.customer.goals</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <!-- Agregar smart button en el buttonbox -->
            <xpath expr="//div[@name='button_box']" position="inside">
                <button name="action_view_customer_goals" 
                        type="object" 
                        class="oe_stat_button" 
                        icon="fa-bullseye"
                        invisible="customer_goal_count == 0"
                        groups="contacts_goals.group_contacts_goals_user">
                    <div class="o_stat_info">
                        <field name="customer_goal_count" widget="statinfo" string="Metas Cliente"/>
                    </div>
                </button>
            </xpath>
        </field>
    </record>
</odoo>

