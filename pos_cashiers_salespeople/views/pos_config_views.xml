<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Vista heredada del formulario de configuración POS -->
    <record id="view_pos_config_form_inherit_cashiers_salespeople" model="ir.ui.view">
        <field name="name">pos.config.form.inherit.cashiers.salespeople</field>
        <field name="model">pos.config</field>
        <field name="inherit_id" ref="point_of_sale.pos_config_view_form"/>
        <field name="arch" type="xml">
            <!-- Agregar los campos después de la sección de otros dispositivos -->
            <xpath expr="//setting[@id='other_devices']" position="after">
                <setting string="Cajeros" help="Seleccionar los usuarios que pueden actuar como cajeros en este POS">
                    <field name="cashier_user_ids" 
                           widget="many2many_tags" 
                           options="{'no_create': True, 'no_create_edit': True}"
                           placeholder="Seleccionar cajeros..."/>
                </setting>
                <setting string="Vendedores" help="Seleccionar los usuarios que pueden actuar como vendedores en este POS">
                    <field name="salesperson_user_ids" 
                           widget="many2many_tags" 
                           options="{'no_create': True, 'no_create_edit': True}"
                           placeholder="Seleccionar vendedores..."/>
                </setting>
            </xpath>
        </field>
    </record>
</odoo>
