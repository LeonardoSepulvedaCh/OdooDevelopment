<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">

        <record id="payment_method_pos_store" model="payment.method">
            <field name="name">POS Store</field>
            <field name="code">pos_store</field>
            <field name="sequence">105</field>
            <field name="active">True</field>
            <field name="image" type="base64"
                file="payment_pos_store/static/img/pos-store-payment-logo.png" />
            <field name="support_tokenization">False</field>
            <field name="support_express_checkout">True</field>
            <field name="support_manual_capture">none</field>
            <field name="support_refund">none</field>
            <field name="supported_country_ids"
                eval="[Command.set([
                         ref('base.co'),
                     ])]"
            />
            <field name="supported_currency_ids"
                eval="[Command.set([
                         ref('base.COP'),
                     ])]"
            />
        </record>
    </data>

</odoo>