<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <!-- Heredar la vista del plan de comisión para agregar el campo target_amount -->
    <record id="sale_commission_plan_view_form_inherit" model="ir.ui.view">
        <field name="name">sale.commission.plan.view.form.inherit.target</field>
        <field name="model">sale.commission.plan</field>
        <field name="inherit_id" ref="sale_commission.sale_commission_plan_view_form"/>
        <field name="arch" type="xml">
            <!-- Ocultar el campo product_id -->
            <xpath expr="//field[@name='achievement_ids']//field[@name='product_id']" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </xpath>
            
            <!-- Ocultar el campo product_categ_id (categorías contables) -->
            <xpath expr="//field[@name='achievement_ids']//field[@name='product_categ_id']" position="attributes">
                <attribute name="column_invisible">1</attribute>
            </xpath>
            
            <!-- Agregar el campo de categoría pública después del tipo -->
            <xpath expr="//field[@name='achievement_ids']//field[@name='type']" position="after">
                <field name="public_categ_id" 
                       string="Categoría eCommerce"
                       optional="show"
                       options="{'no_create': True}"/>
            </xpath>
            
            <!-- Agregar el campo target_amount y campos informativos después de public_categ_id -->
            <xpath expr="//field[@name='achievement_ids']//field[@name='public_categ_id']" position="after">
                <field name="target_amount" 
                       widget="monetary" 
                       options="{'currency_field': 'currency_id'}"
                       optional="show"/>
                <field name="actual_amount" 
                       widget="monetary" 
                       options="{'currency_field': 'currency_id'}"
                       optional="show"
                       readonly="1"/>
                <field name="achievement_percentage" 
                       widget="progressbar"
                       readonly="1"/>
            </xpath>
            
            <!-- Agregar el objetivo total por categorías en la pestaña de Targets/Periods -->
            <xpath expr="//field[@name='target_ids']//field[@name='amount']" position="after">
                <field name="total_target_by_category" 
                       widget="monetary" 
                       options="{'currency_field': 'currency_id'}"
                       optional="show"
                       readonly="1"
                       string="Obj. por Categorías"/>
            </xpath>
        </field>
    </record>
</odoo>