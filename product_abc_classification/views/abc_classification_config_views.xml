<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista de Formulario de Configuración ABC -->
    <record id="view_abc_classification_config_form" model="ir.ui.view">
        <field name="name">abc.classification.config.form</field>
        <field name="model">abc.classification.config</field>
        <field name="arch" type="xml">
            <form string="Configuración ABC">
                <header>
                    <button name="action_calculate_abc_now" 
                            string="Calculate ABC Now" 
                            type="object" 
                            class="oe_highlight"
                            groups="product_abc_classification.group_abc_manager"/>
                </header>
                <sheet>
                    <widget name="web_ribbon" title="Active" 
                            bg_color="bg-success" 
                            invisible="not active"/>
                    
                    <group>
                        <group>
                            <field name="name"/>
                            <field name="active"/>
                            <field name="analysis_period_months"/>
                            <field name="include_zero_sales"/>
                        </group>
                        <group>
                            <field name="last_calculation_date" readonly="1"/>
                            <field name="products_calculated" readonly="1"/>
                            <field name="calculation_time" readonly="1" widget="float_time"/>
                        </group>
                    </group>
                    
                    <group string="ABC Thresholds (Cumulative %)">
                        <group>
                            <field name="threshold_aaa"/>
                            <field name="threshold_aa"/>
                        </group>
                        <group>
                            <field name="threshold_a"/>
                            <field name="threshold_b"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Vista de Lista de Configuración ABC -->
    <record id="view_abc_classification_config_tree" model="ir.ui.view">
        <field name="name">abc.classification.config.tree</field>
        <field name="model">abc.classification.config</field>
        <field name="arch" type="xml">
            <list string="ABC Configuration">
                <field name="name"/>
                <field name="active" widget="boolean_toggle"/>
                <field name="threshold_aaa"/>
                <field name="threshold_aa"/>
                <field name="threshold_a"/>
                <field name="threshold_b"/>
                <field name="analysis_period_months"/>
                <field name="last_calculation_date"/>
                <field name="products_calculated"/>
            </list>
        </field>
    </record>
    
    <!-- Acción para Configuración ABC -->
    <record id="action_abc_classification_config" model="ir.actions.act_window">
        <field name="name">ABC Configuration</field>
        <field name="res_model">abc.classification.config</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Create ABC Classification Configuration
            </p>
            <p>
                Configure thresholds and parameters for ABC classification calculation.
            </p>
        </field>
    </record>

</odoo>

