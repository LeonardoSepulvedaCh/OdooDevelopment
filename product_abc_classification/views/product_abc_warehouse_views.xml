<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista de Formulario de ABC por Bodega -->
    <record id="view_product_abc_warehouse_form" model="ir.ui.view">
        <field name="name">product.abc.warehouse.form</field>
        <field name="model">product.abc.warehouse</field>
        <field name="arch" type="xml">
            <form string="Clasificación ABC por Bodega">
                <sheet>
                    <group>
                        <group>
                            <field name="product_tmpl_id"/>
                            <field name="warehouse_id"/>
                        </group>
                        <group>
                            <field name="classification" widget="badge" 
                                   decoration-success="classification == 'aaa'"
                                   decoration-info="classification == 'aa'"
                                   decoration-primary="classification == 'a'"
                                   decoration-warning="classification == 'b'"
                                   decoration-muted="classification == 'c'"/>
                            <field name="sales_value" widget="monetary"/>
                            <field name="cumulative_percentage" widget="percentage"/>
                            <field name="rank"/>
                            <field name="last_calculation"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Vista de Lista de ABC por Bodega -->
    <record id="view_product_abc_warehouse_tree" model="ir.ui.view">
        <field name="name">product.abc.warehouse.tree</field>
        <field name="model">product.abc.warehouse</field>
        <field name="arch" type="xml">
            <list string="ABC por Bodega" create="false" delete="false">
                <field name="product_tmpl_id"/>
                <field name="warehouse_id"/>
                <field name="classification" widget="badge" 
                       decoration-success="classification == 'aaa'"
                       decoration-info="classification == 'aa'"
                       decoration-primary="classification == 'a'"
                       decoration-warning="classification == 'b'"
                       decoration-muted="classification == 'c'"/>
                <field name="sales_value" widget="monetary"/>
                <field name="cumulative_percentage" widget="percentage" optional="hide"/>
                <field name="rank" optional="hide"/>
                <field name="last_calculation" optional="hide"/>
            </list>
        </field>
    </record>
    
    <!-- Vista de Búsqueda de ABC por Bodega -->
    <record id="view_product_abc_warehouse_search" model="ir.ui.view">
        <field name="name">product.abc.warehouse.search</field>
        <field name="model">product.abc.warehouse</field>
        <field name="arch" type="xml">
            <search string="Buscar ABC por Bodega">
                <field name="product_tmpl_id"/>
                <field name="warehouse_id"/>
                <field name="classification"/>
                
                <separator/>
                <filter string="AAA" name="filter_aaa" domain="[('classification', '=', 'aaa')]"/>
                <filter string="AA" name="filter_aa" domain="[('classification', '=', 'aa')]"/>
                <filter string="A" name="filter_a" domain="[('classification', '=', 'a')]"/>
                <filter string="B" name="filter_b" domain="[('classification', '=', 'b')]"/>
                <filter string="C" name="filter_c" domain="[('classification', '=', 'c')]"/>
                
                <group>
                    <filter string="Producto" name="group_product" context="{'group_by': 'product_tmpl_id'}"/>
                    <filter string="Bodega" name="group_warehouse" context="{'group_by': 'warehouse_id'}"/>
                    <filter string="Clasificación" name="group_classification" context="{'group_by': 'classification'}"/>
                </group>
            </search>
        </field>
    </record>
    
    <!-- Acción para ABC por Bodega -->
    <record id="action_product_abc_warehouse" model="ir.actions.act_window">
        <field name="name">ABC por Bodega</field>
        <field name="res_model">product.abc.warehouse</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Aún no hay clasificaciones ABC por bodega
            </p>
            <p>
                Las clasificaciones ABC aparecerán aquí después de ejecutar el cálculo.
            </p>
        </field>
    </record>

</odoo>

