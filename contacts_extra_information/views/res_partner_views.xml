<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_birth_date" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.birth_date</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">

        <xpath expr="//field[@name='phone']/ancestor::group[1]" position="after">
            <group>
                <field name="birth_date"/>
                <field name="card_code"/>
            </group>
        </xpath>

        <xpath expr="//group[@name='sale']" position="inside">
            <field name="warehouse_id" domain="[('active', '=', True)]" options="{'no_create': True, 'no_open': True}"/>
        </xpath>

        </field>
    </record>
</odoo>
