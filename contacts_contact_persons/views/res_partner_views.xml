<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_partner_form_inherit_contact_persons" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.contact_persons</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//div[@name='button_box']" position="inside">
                <button class="oe_stat_button" type="object" name="action_view_contact_persons"
                        icon="fa-users">
                    <field string="Contactos Adicionales" name="contact_persons_count" widget="statinfo"/>
                </button>
            </xpath>
            
            <xpath expr="//notebook" position="inside">
                <page string="Contactos Adicionales">
                    <field name="contact_persons_ids" context="{'default_partner_id': id}">
                        <kanban>
                            <field name="name"/>
                            <field name="position"/>
                            <field name="identity_number"/>
                            <field name="birthdate"/>
                            <field name="address"/>
                            <field name="phone"/>
                            <field name="mobile"/>
                            <field name="email"/>
                            <field name="notes"/>
                            <templates>
                                <t t-name="card" class="flex-row">
                                    <aside class="o_kanban_aside_full">
                                        <div class="o_kanban_image_fill w-100 d-flex align-items-center justify-content-center bg-light" style="min-height: 80px;">
                                            <i class="fa fa-user fa-3x text-muted" title="Contacto Adicional"/>
                                        </div>
                                    </aside>
                                    <main class="ps-2 ps-md-0">
                                        <field name="name" invisible="not name" class="fw-bold"/>
                                        <div t-if="record.position.raw_value" class="text-muted">
                                            <i class="fa fa-fw me-1 fa-briefcase text-primary" title="Cargo"/>
                                            <field name="position"/>
                                        </div>
                                        <div t-if="record.email.raw_value" class="text-truncate">
                                            <i class="fa fa-fw me-1 fa-envelope text-primary" title="Email"/>
                                            <field name="email"/>
                                        </div>
                                        <div t-if="record.phone.raw_value">
                                            <i class="fa fa-fw me-1 fa-phone text-success" title="TelÃ©fono"/>
                                            <field name="phone"/>
                                        </div>
                                        <div t-if="record.address.raw_value" class="text-truncate">
                                            <i class="fa fa-fw me-1 fa-map-marker text-danger" title="DirecciÃ³n"/>
                                            <field name="address"/>
                                        </div>
                                    </main>
                                </t>
                            </templates>
                        </kanban>
                    </field>
                </page>
            </xpath>
        </field>
    </record>
</odoo>
