<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">

    <record id="payment_method_credit" model="payment.method">
        <field name="name">Credit</field>
        <field name="code">credit</field>
        <field name="sequence">100</field>
        <field name="active">True</field>
        <field name="image" type="base64" file="payment_credit/static/img/credit-payment-logo.png"/>
        <field name="support_tokenization">False</field>
        <field name="support_express_checkout">False</field>
        <field name="support_manual_capture">none</field>
        <field name="support_refund">none</field>
        <field name="supported_country_ids"
               eval="[Command.set([
                         ref('base.co'),
                     ])]"
        />
        <field name="supported_currency_ids"
               eval="[Command.set([
                         ref('base.COP'),
                     ])]"
        />
    </record>

</odoo>
