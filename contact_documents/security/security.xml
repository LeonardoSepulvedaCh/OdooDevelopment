<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Reglas de acceso bÃ¡sicas - todos los usuarios pueden ver sus propios documentos -->
        <record id="contact_document_access_rule" model="ir.rule">
            <field name="name">Regla de acceso a documentos de contacto</field>
            <field name="model_id" ref="model_contact_document"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>

        <record id="document_type_access_rule" model="ir.rule">
            <field name="name">Regla de acceso a tipos de documento</field>
            <field name="model_id" ref="model_document_type"/>
            <field name="domain_force">[(1, '=', 1)]</field>
            <field name="groups" eval="[(4, ref('base.group_user'))]"/>
        </record>
    </data>
</odoo>