<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista Lista de Documentos -->
    <record id="contact_document_list_view" model="ir.ui.view">
        <field name="name">contact.document.list</field>
        <field name="model">contact.document</field>
        <field name="arch" type="xml">
            <list string="Documentos de Contacto">
                <field name="partner_id"/>
                <field name="document_type_id"/>
                <field name="file_name"/>
                <button name="action_approve" type="object" icon="fa-check" title="Aprobar Documento" 
                        invisible="state == 'approved'"/>
                <button name="action_reject" type="object" icon="fa-times" title="Rechazar Documento" 
                        invisible="state == 'rejected'"/>
                <field name="state" string="Estado" widget="badge" 
                       decoration-success="state == 'approved'" 
                       decoration-danger="state == 'rejected'" 
                       decoration-info="state == 'new'"/>
            </list>
        </field>
    </record>

    <!-- Vista Formulario de Documentos -->
    <record id="contact_document_form_view" model="ir.ui.view">
        <field name="name">contact.document.form</field>
        <field name="model">contact.document</field>
        <field name="arch" type="xml">
            <form string="Documento de Contacto">
                <header>
                    <button name="action_approve" type="object" string="Aprobar" 
                            class="btn-primary" invisible="state == 'approved'"/>
                    <button name="action_reject" type="object" string="Rechazar" 
                            class="btn-secondary" invisible="state == 'rejected'"/>
                    <field name="state" widget="statusbar" statusbar_visible="new,approved,rejected"/>
                </header>
                <sheet>
                    <group>
                        <group>
                            <field name="partner_id"/>
                            <field name="document_type_id"/>
                        </group>
                        <group>
                            <field name="file_name"/>
                            <field name="file" filename="file_name"/>
                        </group>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Acción de Ventana para Documentos -->
    <record id="contact_document_action" model="ir.actions.act_window">
        <field name="name">Documentos de Contacto</field>
        <field name="res_model">contact.document</field>
        <field name="view_mode">list,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea el primer documento de contacto
            </p>
            <p>
                Aquí puedes gestionar todos los documentos asociados a tus contactos.
            </p>
        </field>
    </record>

    <!-- Elemento de Menú - Integrado en Contactos -->
    <menuitem id="contact_documents_menu" name="Documentos" parent="contacts.menu_contacts" 
              action="contact_document_action" sequence="15"/>

</odoo>
