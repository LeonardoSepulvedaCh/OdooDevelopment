<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista de formulario -->
    <record id="view_contact_registration_form" model="ir.ui.view">
        <field name="name">contact.registration.form</field>
        <field name="model">contact.registration</field>
        <field name="arch" type="xml">
            <form string="Registro QR">
                <header>
                    <button name="action_download_qr" 
                            type="object" 
                            string="Descargar QR" 
                            class="btn-primary"
                            icon="fa-download"/>
                    <field name="active" widget="boolean_toggle"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_partners" 
                                type="object" 
                                class="oe_stat_button" 
                                icon="fa-users">
                            <field name="partner_count" widget="statinfo" string="Contactos"/>
                        </button>
                    </div>
                    
                    <field name="qr_code" widget="image" class="oe_avatar"/>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1>
                            <field name="name" placeholder="ej. Campaña 2025"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="token" readonly="1"/>
                            <field name="registration_url" widget="url" readonly="1"/>
                        </group>
                        <group>
                            <field name="pos_config_id" options="{'no_create': True}"/>
                            <field name="create_date" readonly="1"/>
                        </group>
                    </group>
                    
                    <div class="alert alert-info mt-3" role="alert" invisible="not pos_config_id">
                        <i class="fa fa-info-circle"/> Los contactos registrados mediante este QR se asignarán automáticamente al POS: <strong><field name="pos_config_id" readonly="1" nolabel="1" class="fw-bold"/></strong>
                    </div>
                </sheet>
            </form>
        </field>
    </record>

    <!-- Vista de lista -->
    <record id="view_contact_registration_list" model="ir.ui.view">
        <field name="name">contact.registration.list</field>
        <field name="model">contact.registration</field>
        <field name="arch" type="xml">
            <list string="Registros QR">
                <field name="name"/>
                <field name="pos_config_id" optional="show"/>
                <field name="token"/>
                <field name="partner_count" string="Registros"/>
                <field name="create_date"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Vista de búsqueda -->
    <record id="view_contact_registration_search" model="ir.ui.view">
        <field name="name">contact.registration.search</field>
        <field name="model">contact.registration</field>
        <field name="arch" type="xml">
            <search string="Buscar Registros QR">
                <field name="name"/>
                <field name="token"/>
                <field name="pos_config_id"/>
                <filter string="Activos" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactivos" name="inactive" domain="[('active', '=', False)]"/>
            </search>
        </field>
    </record>

    <!-- Acción de ventana -->
    <record id="action_contact_registration" model="ir.actions.act_window">
        <field name="name">Registros QR</field>
        <field name="res_model">contact.registration</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primer código QR para registro de contactos
            </p>
            <p>
                Los códigos QR permiten que las personas se registren como contactos
                escaneando el código con su teléfono móvil.
            </p>
        </field>
    </record>

    <!-- Menú principal en la app de Contactos -->
    <menuitem id="menu_contact_registration_root"
              name="Registros QR"
              parent="contacts.menu_contacts"
              sequence="10"/>
    
    <!-- Submenú para la acción -->
    <menuitem id="menu_contact_registration"
              name="Registros QR"
              parent="menu_contact_registration_root"
              action="action_contact_registration"
              sequence="10"/>

    <!-- Vista heredada de res.partner para mostrar campo de registro -->
    <record id="view_partner_form_inherit_registration" model="ir.ui.view">
        <field name="name">res.partner.form.inherit.registration</field>
        <field name="model">res.partner</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <xpath expr="//field[@name='category_id']" position="after">
                <field name="registration_id" readonly="1"/>
            </xpath>
        </field>
    </record>

</odoo>

