<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="view_sales_target_mass_assign_wizard_form" model="ir.ui.view">
        <field name="name">sales.target.mass.assign.wizard.form</field>
        <field name="model">sales.target.mass.assign.wizard</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <group colspan="2">
                        <group><field name="year" options="{'type': 'number'}"/></group>
                        <group><field name="month"/></group>
                    </group>
                    <notebook>
                        <page string="Vendedores y Categorías" name="salespeople">
                            <field name="line_ids" widget="one2many" nolabel="1">
                                <form string="Detalle del Vendedor">
                                    <group>
                                        <field name="salesperson_id" readonly="1" force_save="1"/>
                                        <field name="previous_month_sales" widget="monetary"/>
                                        <field name="target_amount" widget="monetary"/>
                                        <field name="existing_target_id" invisible="1" force_save="1"/>
                                    </group>
                                    <group string="Metas por Categoría">
                                        <field name="category_line_ids" options="{'no_create': True, 'no_open': True}">
                                            <list editable="bottom" create="false" delete="false">
                                                <field name="category_id" readonly="1" force_save="1"/>
                                                <field name="target_amount" widget="monetary"/>
                                                <field name="currency_id" column_invisible="1"/>
                                            </list>
                                        </field>
                                    </group>
                                </form>
                                <list decoration-success="has_existing_target" create="false" delete="false">
                                    <field name="salesperson_id" readonly="1" force_save="1"/>
                                    <field name="previous_month_sales" widget="monetary"/>
                                    <field name="target_amount" widget="monetary" sum="Total"/>
                                    <field name="existing_target_id" column_invisible="1" force_save="1"/>
                                    <field name="has_existing_target" column_invisible="1"/>
                                    <field name="currency_id" column_invisible="1"/>
                                </list>
                            </field>
                        </page>
                    </notebook>
                </sheet>
                <footer>
                    <button name="action_assign_targets" string="Asignar Metas" 
                            type="object" class="btn-primary" data-hotkey="q"/>
                    <button string="Cancelar" class="btn-secondary" special="cancel" data-hotkey="z"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>

