<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Acción para Metas Comerciales -->
    <record id="action_sales_target" model="ir.actions.act_window">
        <field name="name">Metas Comerciales</field>
        <field name="res_model">sales.target</field>
        <field name="view_mode">list,kanban,form,pivot,graph</field>
        <field name="context">{'search_default_current_year': 1, 'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea tu primera meta comercial
            </p>
            <p>
                Define metas mensuales para tus vendedores y realiza seguimiento de su cumplimiento.
                <br/>
                Usa la opción "Asignación Masiva" para crear metas para todos los vendedores a la vez.
            </p>
        </field>
    </record>

    <!-- Acción para Asignación Masiva -->
    <record id="action_sales_target_mass_assign" model="ir.actions.act_window">
        <field name="name">Asignación Masiva de Metas</field>
        <field name="res_model">sales.target.mass.assign.wizard</field>
        <field name="view_mode">form</field>
        <field name="target">new</field>
        <field name="binding_model_id" ref="model_sales_target"/>
        <field name="binding_view_types">list</field>
    </record>

    <!-- Menú Principal -->
    <menuitem id="menu_sales_target_root"
              name="Metas Comerciales"
              parent="sale.sale_menu_root"
              groups="sales_targets.group_sales_targets_user"
              sequence="50"/>

    <menuitem id="menu_sales_target"
              name="Metas"
              parent="menu_sales_target_root"
              action="action_sales_target"
              groups="sales_targets.group_sales_targets_user"
              sequence="10"/>

    <menuitem id="menu_sales_target_mass_assign"
              name="Asignación Masiva"
              parent="menu_sales_target_root"
              action="action_sales_target_mass_assign"
              groups="sales_targets.group_sales_targets_manager"
              sequence="20"/>

</odoo>

