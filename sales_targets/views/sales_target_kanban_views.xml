<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista Kanban de Metas Comerciales -->
    <record id="view_sales_target_kanban" model="ir.ui.view">
        <field name="name">sales.target.kanban</field>
        <field name="model">sales.target</field>
        <field name="arch" type="xml">
            <kanban class="o_kanban_mobile">
                <field name="salesperson_id"/>
                <field name="month"/>
                <field name="year"/>
                <field name="target_amount"/>
                <field name="invoiced_amount"/>
                <field name="achievement_percentage"/>
                <field name="achievement_percentage_display"/>
                <field name="state"/>
                <templates>
                    <t t-name="card">
                        <div class="oe_kanban_content">
                            <div class="o_kanban_record_top">
                                <div class="o_kanban_record_headings">
                                    <strong class="o_kanban_record_title">
                                        <field name="salesperson_id"/>
                                    </strong>
                                </div>
                                <span class="float-end badge rounded-pill"
                                      t-attf-class="bg-#{record.state.raw_value == 'active' ? 'success' : record.state.raw_value == 'draft' ? 'info' : 'secondary'}">
                                    <field name="state"/>
                                </span>
                            </div>
                            <div class="o_kanban_record_body">
                                <div>
                                    <field name="month"/> / <field name="year" options="{'type': 'number'}"/>
                                </div>
                                <div>
                                    Objetivo: <field name="target_amount" widget="monetary"/>
                                </div>
                                <div>
                                    Facturado: <field name="invoiced_amount" widget="monetary"/>
                                </div>
                                <div>
                                    <strong>Cumplimiento: <t t-out="record.achievement_percentage_display.value"/></strong>
                                </div>
                            </div>
                        </div>
                    </t>
                </templates>
            </kanban>
        </field>
    </record>

</odoo>

