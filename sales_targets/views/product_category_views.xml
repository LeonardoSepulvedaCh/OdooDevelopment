<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista List personalizada para Categorías en Metas -->
    <record id="view_product_category_targets_list" model="ir.ui.view">
        <field name="name">product.category.targets.list</field>
        <field name="model">product.category</field>
        <field name="arch" type="xml">
            <list editable="top" create="false" delete="false">
                <field name="complete_name"/>
                <field name="active_for_targets" widget="boolean_toggle"/>
            </list>
        </field>
    </record>

    <!-- Acción para Gestionar Categorías para Metas -->
    <record id="action_product_category_targets" model="ir.actions.act_window">
        <field name="name">Categorías</field>
        <field name="res_model">product.category</field>
        <field name="view_mode">list</field>
        <field name="view_id" ref="view_product_category_targets_list"/>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Gestiona categorías para metas de ventas
            </p>
            <p>
                Marca las categorías de productos que quieres usar en las metas de ventas.
                <br/>
                Solo las categorías activas estarán disponibles al definir las líneas de metas.
            </p>
        </field>
    </record>

    <!-- Menú para Categorías de Metas -->
    <menuitem id="menu_product_category_targets"
              name="Categorías"
              parent="sales_targets.menu_sales_target_root"
              action="action_product_category_targets"
              groups="sales_targets.group_sales_targets_manager"
              sequence="30"/>

</odoo>

