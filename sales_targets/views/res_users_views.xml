<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <record id="view_users_form_inherit_salesperson" model="ir.ui.view">
        <field name="name">res.users.form.inherit.salesperson</field>
        <field name="model">res.users</field>
        <field name="inherit_id" ref="base.view_users_form"/>
        <field name="arch" type="xml">
            <!-- Agregar el campo is_salesperson en la pÃ¡gina de Preferencias -->
            <xpath expr="//page[@name='preferences']" position="inside">
                <group name="sales_targets" string="Metas Comerciales">
                    <field name="is_salesperson"/>
                </group>
            </xpath>
        </field>
    </record>

</odoo>

