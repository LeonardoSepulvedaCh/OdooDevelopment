<?xml version="1.0" encoding="utf-8"?>
<odoo noupdate="1">
    
    <!-- Activate PSE payment method and customize image -->
    <record id="payment.payment_method_pse" model="payment.method">
        <field name="name">PSE</field>
        <field name="code">pse</field>
        <field name="active">True</field>
        <field name="image" type="base64" file="payment_rutavity/static/img/pse_logo.png"/>
        <field name="support_tokenization">False</field>
        <field name="support_express_checkout">False</field>
    </record>

</odoo>