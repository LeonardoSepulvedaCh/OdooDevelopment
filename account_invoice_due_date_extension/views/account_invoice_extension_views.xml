<?xml version="1.0" encoding="utf-8"?>
<odoo>

    <!-- Vista de lista para gestión de prórrogas -->
    <record id="view_invoice_extension_tree" model="ir.ui.view">
        <field name="name">account.invoice.due.date.extension.tree</field>
        <field name="model">account.invoice.due.date.extension</field>
        <field name="arch" type="xml">
            <list string="Prórrogas de Facturas">
                <field name="name" string="Número"/>
                <field name="state" string="Estado" widget="badge" decoration-success="state == 'approved'" decoration-info="state == 'draft'" decoration-danger="state == 'rejected'" decoration-muted="state == 'cancelled'"/>
                <field name="invoice_id" string="Factura"/>
                <field name="partner_id" string="Cliente"/>
                <field name="invoice_date" string="Fecha Factura"/>
                <field name="original_due_date" string="Vencimiento Original"/>
                <field name="extended_due_date" string="Nueva Fecha de Vencimiento"/>
                <field name="keep_discount" string="Mantiene Descuento" optional="show"/>
                <field name="reason" string="Motivo" optional="hide"/>
                <field name="approved_by" string="Aprobado por" widget="many2one_avatar_user" optional="show"/>
                <field name="create_date" string="Fecha de Registro" optional="hide"/>
                <field name="amount_residual" string="Saldo Pendiente" optional="show"/>
                <field name="payment_state" string="Estado de Pago" optional="hide"/>
            </list>
        </field>
    </record>

    <!-- Vista de formulario para crear/editar prórrogas -->
    <record id="view_invoice_extension_form" model="ir.ui.view">
        <field name="name">account.invoice.due.date.extension.form</field>
        <field name="model">account.invoice.due.date.extension</field>
        <field name="arch" type="xml">
            <form string="Prórroga de Factura">
                <header>
                    <button name="action_send_to_approval" 
                            string="Enviar a Aprobación" 
                            type="object" 
                            class="oe_highlight"
                            invisible="state != 'draft' or approval_request_id"/>
                    <button name="action_view_approval_request" 
                            string="Ver Aprobación" 
                            type="object"
                            invisible="not approval_request_id"/>
                    <button name="action_cancel" 
                            string="Cancelar" 
                            type="object"
                            invisible="state in ['cancelled', 'approved']"
                            confirm="¿Está seguro de cancelar esta prórroga?"/>
                    <button name="action_reset_to_draft" 
                            string="Regresar a Borrador" 
                            type="object"
                            invisible="state not in ['rejected', 'cancelled']"/>
                    <field name="state" widget="statusbar" statusbar_visible="draft,approved,rejected,cancelled"/>
                </header>
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="action_view_approval_request"
                                type="object"
                                class="oe_stat_button"
                                icon="fa-check-circle"
                                invisible="not approval_request_id">
                            <div class="o_stat_info">
                                <span class="o_stat_text">Aprobación</span>
                            </div>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <h1>
                            <field name="name" readonly="1"/>
                        </h1>
                    </div>
                    
                    <group>
                        <group string="Información de la Factura">
                            <field name="invoice_id" options="{'no_create': True}" readonly="state != 'draft'"/>
                            <field name="partner_id" readonly="1"/>
                            <field name="invoice_date" readonly="1"/>
                            <field name="original_due_date" readonly="1"/>
                            <field name="payment_term_id" readonly="1"/>
                            <field name="payment_state" readonly="1"/>
                        </group>
                        <group string="Información Financiera">
                            <field name="amount_total" widget="monetary"/>
                            <field name="amount_residual" widget="monetary"/>
                            <field name="currency_id" invisible="1"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Prórroga">
                            <field name="extended_due_date" readonly="state != 'draft'"/>
                            <field name="keep_discount" readonly="state != 'draft'"/>
                            <field name="user_id" readonly="1"/>
                            <field name="create_date" readonly="1"/>
                        </group>
                        <group string="Información de Aprobación" invisible="state == 'draft'">
                            <field name="approval_request_id" readonly="1"/>
                            <field name="approved_by" invisible="state != 'approved'"/>
                            <field name="approved_date" invisible="state != 'approved'"/>
                            <field name="rejected_date" invisible="state != 'rejected'"/>
                        </group>
                    </group>
                    
                    <group>
                        <group string="Justificación">
                            <field name="reason" nolabel="1" colspan="2" placeholder="Describa el motivo de la prórroga..." readonly="state != 'draft'"/>
                        </group>
                    </group>
                </sheet>
                <chatter/>
            </form>
        </field>
    </record>

    <!-- Vista de búsqueda -->
    <record id="view_invoice_extension_search" model="ir.ui.view">
        <field name="name">account.invoice.due.date.extension.search</field>
        <field name="model">account.invoice.due.date.extension</field>
        <field name="arch" type="xml">
            <search string="Buscar Prórrogas">
                <field name="name" string="Número de Prórroga"/>
                <field name="invoice_id" string="Factura"/>
                <field name="partner_id" string="Cliente"/>
                <field name="extended_due_date" string="Fecha de Prórroga"/>
                <separator/>
                <filter string="Borrador" name="draft" domain="[('state', '=', 'draft')]"/>
                <filter string="Aprobadas" name="approved" domain="[('state', '=', 'approved')]"/>
                <filter string="Rechazadas" name="rejected" domain="[('state', '=', 'rejected')]"/>
                <filter string="Canceladas" name="cancelled" domain="[('state', '=', 'cancelled')]"/>
                <separator/>
                <filter string="Activas" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactivas" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Con Descuento" name="with_discount" domain="[('keep_discount', '=', True)]"/>
                <filter string="Sin Descuento" name="without_discount" domain="[('keep_discount', '=', False)]"/>
                <separator/>
                <filter string="Sin Pagar" name="unpaid" domain="[('payment_state', 'in', ['not_paid', 'partial'])]"/>
                <filter string="Vencidas Hoy o Antes" name="overdue_today" 
                        domain="[('extended_due_date', '&lt;=', context_today())]"/>
                <separator/>
                <filter string="Estado" name="group_state" context="{'group_by': 'state'}"/>
                <filter string="Cliente" name="group_partner" context="{'group_by': 'partner_id'}"/>
                <filter string="Fecha de Prórroga" name="group_extended_date" context="{'group_by': 'extended_due_date'}"/>
                <filter string="Usuario" name="group_user" context="{'group_by': 'user_id'}"/>
            </search>
        </field>
    </record>

    <!-- Acción para el menú principal -->
    <record id="action_invoice_extension" model="ir.actions.act_window">
        <field name="name">Gestión de Prórrogas</field>
        <field name="res_model">account.invoice.due.date.extension</field>
        <field name="view_mode">list,form</field>
        <field name="search_view_id" ref="view_invoice_extension_search"/>
        <field name="context">{
            'search_default_active': 1,
        }</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                No hay prórrogas registradas
            </p>
            <p>
                Crea un nuevo registro de prórroga para extender la fecha de vencimiento de una factura.<br/>
                Cada prórroga debe ser enviada a aprobación antes de ser aplicada.
            </p>
        </field>
    </record>

    <!-- Menú -->
    <menuitem id="menu_invoice_extension"
              name="Gestión de Prórrogas"
              parent="account.menu_finance_receivables"
              action="action_invoice_extension"
              groups="group_invoice_extension_user"
              sequence="50"/>

</odoo>

