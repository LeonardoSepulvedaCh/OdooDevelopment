<?xml version="1.0" encoding="utf-8"?>
<odoo>
    
    <!-- Vista de formulario para l10n_co.tax.regime -->
    <record id="view_l10n_co_tax_regime_form" model="ir.ui.view">
        <field name="name">l10n.co.tax.regime.form</field>
        <field name="model">l10n_co.tax.regime</field>
        <field name="arch" type="xml">
            <form string="Régimen Tributario">
                <sheet>
                    <div class="oe_button_box" name="button_box">
                        <button name="toggle_active" type="object" class="oe_stat_button" icon="fa-archive">
                            <field name="active" widget="boolean_button" options='{"terminology": "archive"}'/>
                        </button>
                    </div>
                    
                    <div class="oe_title">
                        <label for="name" class="oe_edit_only"/>
                        <h1><field name="name" placeholder="Nombre del régimen tributario"/></h1>
                    </div>
                    
                    <group>
                        <group>
                            <field name="code"/>
                            <field name="sequence"/>
                        </group>
                        <group>
                            <field name="tipo_factura_electronica"/>
                        </group>
                    </group>
                    
                    <notebook>
                        <page string="Retenciones" name="retentions">
                            <group>
                                <group string="Tipos de Retención">
                                    <field name="retencion_fuente"/>
                                    <field name="retencion_cree"/>
                                    <field name="retencion_iva"/>
                                </group>
                                <group string="Otras Retenciones">
                                    <field name="retencion_timbre"/>
                                    <field name="retencion_ica"/>
                                </group>
                            </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    
    <!-- Vista de lista para l10n_co.tax.regime -->
    <record id="view_l10n_co_tax_regime_list" model="ir.ui.view">
        <field name="name">l10n.co.tax.regime.list</field>
        <field name="model">l10n_co.tax.regime</field>
        <field name="arch" type="xml">
            <list string="Regímenes Tributarios" default_order="sequence, code">
                <field name="sequence" widget="handle"/>
                <field name="code"/>
                <field name="name"/>
                <field name="tipo_factura_electronica"/>
                <field name="retencion_fuente" optional="hide"/>
                <field name="retencion_cree" optional="hide"/>
                <field name="retencion_iva" optional="hide"/>
                <field name="retencion_timbre" optional="hide"/>
                <field name="retencion_ica" optional="hide"/>
                <field name="active" widget="boolean_toggle"/>
            </list>
        </field>
    </record>
    
    <!-- Vista de búsqueda para l10n_co.tax.regime -->
    <record id="view_l10n_co_tax_regime_search" model="ir.ui.view">
        <field name="name">l10n.co.tax.regime.search</field>
        <field name="model">l10n_co.tax.regime</field>
        <field name="arch" type="xml">
            <search string="Buscar Régimen Tributario">
                <field name="name" string="Régimen" 
                       filter_domain="['|', ('name', 'ilike', self), ('code', 'ilike', self)]"/>
                <field name="code"/>
                <filter string="Activos" name="active" domain="[('active', '=', True)]"/>
                <filter string="Inactivos" name="inactive" domain="[('active', '=', False)]"/>
                <separator/>
                <filter string="Con Retención Fuente" name="retencion_fuente" 
                        domain="[('retencion_fuente', '=', True)]"/>
                <filter string="Con Retención IVA" name="retencion_iva" 
                        domain="[('retencion_iva', '=', True)]"/>
                <filter string="Con Retención ICA" name="retencion_ica" 
                        domain="[('retencion_ica', '=', True)]"/>
                <separator/>
                <filter string="Tipo Factura Electrónica" name="group_tipo_factura" 
                        context="{'group_by': 'tipo_factura_electronica'}"/>
            </search>
        </field>
    </record>
    
    <!-- Acción para l10n_co.tax.regime -->
    <record id="action_l10n_co_tax_regime" model="ir.actions.act_window">
        <field name="name">Regímenes Tributarios</field>
        <field name="res_model">l10n_co.tax.regime</field>
        <field name="view_mode">list,form</field>
        <field name="context">{'search_default_active': 1}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Crea el primer régimen tributario
            </p>
            <p>
                Los regímenes tributarios definen la clasificación fiscal de los contactos
                según la normativa DIAN de Colombia. Estos se utilizan en los reportes
                de medios magnéticos e informes de exógenas.
            </p>
        </field>
    </record>
    
    <!-- Menú para l10n_co.tax.regime -->
    <menuitem id="menu_l10n_co_tax_regime"
              name="Regímenes Tributarios"
              parent="contacts.res_partner_menu_config"
              action="action_l10n_co_tax_regime"
              sequence="50"/>
    
</odoo>

