<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        
        <!-- Categoría de módulo -->
        <record id="module_category_sale_credit_quota" model="ir.module.category">
            <field name="name">Gestión de Cupos de Crédito</field>
            <field name="description">Permisos para el módulo de gestión de cupos de crédito</field>
            <field name="sequence">10</field>
        </record>

        <!-- Privilegio para el módulo -->
        <record id="res_groups_privilege_sale_credit_quota" model="res.groups.privilege">
            <field name="name">Gestión de Cupos de Crédito</field>
            <field name="category_id" ref="module_category_sale_credit_quota"/>
            <field name="description">Acceso a las funcionalidades de Gestión de Cupos de Crédito</field>
        </record>

        <!-- Grupo: Usuario (Solo Lectura) -->
        <record id="group_sale_credit_quota_user" model="res.groups">
            <field name="name">Usuario: Solo Lectura</field>
            <field name="privilege_id" ref="res_groups_privilege_sale_credit_quota"/>
            <field name="implied_ids" eval="[(4, ref('base.group_user'))]"/>
            <field name="comment">El usuario puede ver las solicitudes de cupo de crédito pero no modificarlas.</field>
        </record>

        <!-- Grupo: Administrador -->
        <record id="group_sale_credit_quota_manager" model="res.groups">
            <field name="name">Administrador: Acceso Total</field>
            <field name="privilege_id" ref="res_groups_privilege_sale_credit_quota"/>
            <field name="implied_ids" eval="[(4, ref('group_sale_credit_quota_user'))]"/>
            <field name="comment">El administrador tiene acceso total incluyendo creación, edición y eliminación de solicitudes de cupo.</field>
        </record>

    </data>
</odoo>

